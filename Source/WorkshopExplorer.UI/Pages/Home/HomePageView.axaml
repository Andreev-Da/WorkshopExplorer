<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:search="clr-namespace:WorkshopExplorer.Widgets.Search"
             xmlns:home="clr-namespace:WorkshopExplorer.Pages.Home"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="WorkshopExplorer.Pages.Home.HomePageView"
             x:DataType="home:HomePageModel">

    <Grid RowDefinitions="Auto, *, Auto">
        <search:SearchWidget DataContext="{Binding SearchWidget}"/>
        <TextBlock Grid.Row="1" Text=""/>
        <Button Grid.Row="2" Command="{Binding SwapCommand}">
            Swap
        </Button>
        <Button Content="Test" Command="{Binding TestSynchronizationContextCommand}"/>
    </Grid>
</UserControl>