<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:WorkshopExplorer.Shared.Views"
             xmlns:search="clr-namespace:WorkshopExplorer.Widgets.Search"
             xmlns:icons="clr-namespace:WorkshopExplorer.Shared.Views.Icons"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
             x:Class="WorkshopExplorer.Widgets.Search.SearchWidget"
             x:DataType="search:SearchWidgetModel">

	<StackPanel>
			<views:SearchTextBox x:Name="SearchInput"/>
		    <Popup IsOpen="{Binding #SearchInput.IsFocused}">
				<ListBox ItemsSource="{Binding Suggests}">
					<ListBox.ItemTemplate>
						 <DataTemplate>
							 <StackPanel>
								 <TextBlock Text="{Binding Name}"/>
								 <TextBlock Text="{Binding Preview}"/>
								 <TextBlock Text="{Binding Reference}"/>
							 </StackPanel>
						 </DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>
		    </Popup>
	</StackPanel>
</UserControl>
