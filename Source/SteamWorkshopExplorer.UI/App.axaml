<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:app="using:SteamWorkshopExplorer.Application"
			 xmlns:views="clr-namespace:SteamWorkshopExplorer.Shared.Views"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SteamWorkshopExplorer.App"
             x:DataType="app:MainViewModel"
             RequestedThemeVariant="{Binding ThemeVariant}">
    
    <Application.DataTemplates>
        <app:PageViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
	    <StyleInclude Source="Shared/StyleTheme.axaml"/>
    </Application.Styles>
</Application>