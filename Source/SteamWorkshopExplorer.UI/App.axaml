<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:app="using:SteamWorkshopExplorer.Application"
             x:Class="SteamWorkshopExplorer.App"
             x:DataType="app:MainViewModel"
             RequestedThemeVariant="{Binding ThemeVariant}">
    
    <Application.DataTemplates>
        <app:PageViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme/>
    </Application.Styles>
</Application>